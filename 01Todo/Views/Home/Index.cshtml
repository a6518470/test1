@model IEnumerable<_01Todo.Models.ToDo>

<style>
    #table1{
        width:100%;
        border:2px solid black;
        border-collapse: separate;
        border-radius:5px;       
    }
    #table1>thead th{
        border:1px solid gray;
        background-color:#1bf68b;
        color:white;
        text-align:center;
    }
    #table1 td,#table1>tbody th{
        border-bottom:1px solid gray;
        height:40px;
        text-align:center;
    }
    /*#table1>tbody>tr:nth-child(2n+1){
        background-color:#ffd800;
    }*/
    #table1>tbody>tr:hover{
        background-color:gray;
        color:white;
    }
    #btn span{
         cursor:pointer;
     }
    .pink{
        background-color:pink;
    }
    .blue{
        background-color:blue;
        color:white;
    }
    .yellow{
        background-color:yellow;
    }

</style>

@{
    ViewBag.Title = "待辦事項";
}

    <h2>待辦事項</h2>

<p>
    <a href="/Home/Create">新增待辦事項</a>
    @*@Html.ActionLink("新增待辦事項", "Create")*@
</p>

<div id="btn">
    <span id="pink">　</span>
    <span id="blue">　</span>
    <span id="yellow">　</span>

</div>

<table id="table1">   
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                Title
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Priority
                @*@Html.DisplayNameFor(model => model.Image)*@
            </th>
            <th>
                End_date
                @*@Html.DisplayNameFor(model => model.Date)*@
            </th>
            <th>
                Management
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <th>
            @item.ID
        </th>
        <td>
            @item.Title
            @*@Html.DisplayFor(modelItem => item.Title)*@
        </td>
        <td>
            <img src="~/images/@item.Image" width="30" />
            @*@Html.DisplayFor(modelItem => item.Image)*@
        </td>
        <td>
            @item.Date.ToShortDateString()
            @*@Html.DisplayFor(modelItem => item.Date)*@
        </td>
        <td>
            <a href="/Home/Edit?id=@item.ID">編輯</a>
            @*@Html.ActionLink("編輯", "Edit", new { id = item.ID })*@ |
            @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
            <a href="/Home/Delete?id=@item.ID" onclick="return confirm('您確定要刪除嗎')">刪除</a>
            @*@Html.ActionLink("刪除", "Delete", new { id = item.ID })*@
        </td>
    </tr>
}

</table>
